{
  "name": "shardus-global-server",
  "version": "0.0.0",
  "description": "The Shardus Global Server",
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/**/*",
    "src/**/*"
  ],
  "config": {
    "dist": "./dist"
  },
  "scripts": {
    "test": "standard && tap --timeout=0 \"test/**/*.spec.js\"",
    "test:watch": "nodemon -x npm run test",
    "test:unit": "tap --timeout=0 \"test/unit/**/*.spec.js\"",
    "test:unit:watch": "nodemon -x npm run test:unit",
    "test:integration": "tap --timeout=0 \"test/integration/**/*.spec.js\"",
    "test:integration:watch": "nodemon -x npm run test:integration",
    "cover": "nyc tap --timeout=0 \"test/**/*.spec.js\" --coverage-report=html && codecov",
    "doc": "typedoc --includeDeclarations --excludeExternals --mode file --tsconfig tdconfig.json --out docs",
    "doc-json": "typedoc --includeDeclarations --excludeExternals --mode file --tsconfig tdconfig.json --json documentation.json",
    "build": "webpack && node scripts/build.js",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:shardus/global/shardus-global-server.git"
  },
  "dependencies": {
    "@hapi/sntp": "3.1.1",
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "deepmerge": "4.2.2",
    "express": "4.16.4",
    "fast-stable-stringify": "1.0.0",
    "got": "9.6.0",
    "log4js": "3.0.6",
    "log4js-extend": "0.2.1",
    "sequelize": "4.41.0",
    "shardus-crypto-utils": "gitlab:shardus/shardus-crypto-utils",
    "shardus-net": "gitlab:shardus/shardus-net",
    "sqlite": "3.0.0",
    "sqlite3": "4.1.1",
    "tar-fs": "github:shardus/tar-fs",
    "trie-prefix-tree": "1.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^13.7.0",
    "axios": "^0.19.2",
    "bytenode-webpack-plugin": "1.0.4",
    "codecov": "3.1.0",
    "gts": "^1.1.2",
    "nodemon": "1.18.4",
    "nyc": "13.1.0",
    "standard": "12.0.1",
    "tap": "12.0.1",
    "typedoc": "^0.16.8",
    "typescript": "~3.7.0",
    "vorpal": "1.12.0",
    "webpack": "4.36.1",
    "webpack-cli": "3.3.6",
    "webpack-node-externals": "1.7.2"
  }
}
