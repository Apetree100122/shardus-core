{
  "dir": "logs",
  "files": {"main": "", "fatal": "", "net": ""},
  "options": {
    "appenders": {
      "out": { "type": "console" },
      "main": {
        "type": "file",
        "maxLogSize": 10000000,
        "backups": 10
      },
      "fatal": {
        "type": "file",
        "maxLogSize": 10000000,
        "backups": 10
      },
      "net": {
        "type": "file",
        "maxLogSize": 10000000,
        "backups": 10
      },
      "playback": {
        "type": "file",
        "maxLogSize": 10000000,
        "backups": 10
      }     
    },
    "categories": {
      "default": { "appenders": [ "out" ], "level": "trace" },
      "main": { "appenders": [ "main" ], "level": "trace" },
      "fatal": { "appenders": [ "fatal" ], "level": "fatal" },
      "net": { "appenders": [ "net" ], "level": "trace" },
      "playback": { "appenders": [ "playback" ], "level": "trace" }
    }
  }
}
