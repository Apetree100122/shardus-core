{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.json",
    "test/**/*.js",
    "test/**/*.ts"
  ],
}
